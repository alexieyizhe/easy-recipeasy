<ul id="users_list">
	<% @users.each do |user| %>
	<li>
		<%= link_to user.name, user_path(user) %>
		<% if current_user and current_user.admin? %>
		<%= link_to "x delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this recipe from the database?"} %>
		<% end %>
	</li>
	<br>
	<br>
	<% end %>
</ul>