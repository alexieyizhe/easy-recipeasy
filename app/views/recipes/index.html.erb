<h1 id="main_title">Easy Recipeasy</h1>
<% if current_user %>
	<h2 id="main_tagline">Welcome back, <%= current_user.name %>! Here are some new flavours for you to try:</h1>
<% else %>
	<h2 id="main_tagline"><%= link_to "Log in", login_path %> or check out our new recipes:</h1>
<% end %>

<br>
<h4>Search for Recipes </h4>
<%= form_tag(search_for_recipes_recipes_path, method: :get, id: "test-form") do %>
	<%= text_field_tag :requested_query %>
	<% submit_tag "Search for Recipe" %>
<% end %>
<input type="submit" value="Submit" form="test-form">
<br>

<h3 id="nav_main"><%= link_to "Home", recipes_path %>  <%= link_to "All Users", users_path %> <%= link_to "My Profile", current_user ? user_path(current_user) : login_path %></h3>

<br>
<br>

<ul id="main_recipes">
	<% @recipes.each do |recipe| %>
	<li>
		<%= link_to recipe.name, recipe_path(recipe) %>
	</li>
	<br>
	<br>
	<% end %>
</ul> 
