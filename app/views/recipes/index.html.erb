<h1 id="main_title">Easy Recipeasy</h1>
<% if current_user and current_user.admin? %>
	<p>Administrator Mode</p>
	<h4>Populate Database: </h4>
	<%= form_tag(populate_db_recipes_path, method: :get, id: "populate-field-admin") do %>
		<%= text_field_tag :requested_query %>
		<% submit_tag "Populate Database" %>
	<% end %>
	<input type="submit" value="Populate" form="populate-field-admin">
	<br>
	<%= link_to "All Users", users_path %>
<% end %>
<% if current_user %>
	<h2 id="main_tagline">Welcome back, <%= current_user.name %>! Here are some new flavours for you to try:</h1>
<% else %>
	<h2 id="main_tagline"><%= link_to "Log in", login_path %>, <%= link_to "sign up", signup_path %>, or check out our new recipes:</h1>
<% end %>

<br>
<h4>Search: </h4>
<%= form_tag(search_for_recipes_recipes_path, method: :get, id: "search-db-field") do %>
	<%= text_field_tag :search_param %>
	<% submit_tag "Search for Recipe" %>
<% end %>
<br>
<input type="submit" value="Search" form="search-db-field">
<br>


<h3 id="nav_main"><%= link_to "Home", recipes_path %> <%= link_to "My Profile", current_user ? user_path(current_user) : login_path %></h3>

<br>
<br>

<ul id="main_recipes">
	<% @recipes[0..19].each do |recipe| %> <!-- display only the first 20 random recipes -->
	<li>
		<%= link_to recipe.name, recipe_path(recipe) %>
		<% if current_user and current_user.admin? %>
			<%= link_to "x delete", recipe_path(recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe from the database?"} %>
		<% end %>
	</li>
	<br>
	<br>
	<% end %>
</ul> 
